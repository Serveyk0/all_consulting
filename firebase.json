{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/sendMail",
        "function": "sendMailCall"
      },
      {
      "source":"**",
      "destination": "/index.html"
    }]
  },
  "emulators": {
    "functions": {
      "port": 3000
    },
    "database": {
      "port": null
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 5002
    }
  }
}
